---
import Heading from "@components/Heading.astro"
import Paragraph from "@components/Paragraph.astro"
import { getI18N } from "@i18n/i18n";

const { currentLocale }  = Astro
const I18N = getI18N({ currentLocale })
---

<section class="relative min-h-[500px] py-5 flex flex-col items-center justify-around gap-4 md:gap-2">

    <Heading level="h3" styles="max-w-[1200px] px-8 text-center" set:html={I18N?.Emphatize_Heading}>
    </Heading>

    

    <div class="w-full px-8 lg:max-w-[1000px] text-center flex flex-col gap-4 md:gap-8">
        <Paragraph set:html={I18N?.Emphatize_P1}></Paragraph>
        <Paragraph set:html={I18N?.Emphatize_P2}></Paragraph>
        <Paragraph set:html={I18N?.Emphatize_P3}></Paragraph>
        <Paragraph set:html={I18N?.Emphatize_P4}></Paragraph>
    </div>

    <div class="absolute inset-0 -z-10 h-full w-full items-center px-5 py-24 [background:radial-gradient(125%_125%_at_50%_10%,#000_60%,#CFA116_100%)] rotate-180"></div>
</section>