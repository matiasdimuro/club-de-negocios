---
import Heading from "@components/Heading.astro";
import FullScreenSectionLayout from "@layouts/FullScreenSectionLayout.astro";
import Carousel from "./Carousel.astro";
import { getI18N } from "@i18n/i18n";

const { currentLocale }  = Astro
const I18N = getI18N({ currentLocale })
---
<FullScreenSectionLayout styles="min-h-[80dvh]">
    <div 
        id="SuccessStories" 
        class="relative w-full h-auto max-w-[1920px] pt-[2rem] px-[2rem] flex flex-col gap-8 items-center justify-center">
        <Heading level="h2" styles="mx-auto text-center">
            {I18N?.SuccessStories_Title}
        </Heading>
        <Carousel />
    </div>
    <div class="absolute inset-0 -z-10 h-full w-full items-center px-5 py-24 [background:radial-gradient(125%_125%_at_50%_10%,#000_60%,#CFA116_100%)]"></div>
</FullScreenSectionLayout>