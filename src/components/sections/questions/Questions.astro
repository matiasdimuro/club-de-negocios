---
import Button from "@components/Button.astro";
import Heading from "@components/Heading.astro";
import FullScreenSectionLayout from "@layouts/FullScreenSectionLayout.astro";
import ItemFAQ from './ItemFAQ.astro'
import Paragraph from "@components/Paragraph.astro";
import { getI18N } from "@i18n/i18n";

const { currentLocale }  = Astro
const I18N = getI18N({ currentLocale })

const preguntasFrecuentes = [
    { heading: I18N?.Questions_Doubts_1_Heading, text: I18N?.Questions_Doubts_1_Description },
    { heading: I18N?.Questions_Doubts_2_Heading, text: I18N?.Questions_Doubts_2_Description  },
    { heading: I18N?.Questions_Doubts_3_Heading, text: I18N?.Questions_Doubts_3_Description  },
    { heading: I18N?.Questions_Doubts_4_Heading, text: I18N?.Questions_Doubts_4_Description  },
    { heading: I18N?.Questions_Doubts_5_Heading, text: I18N?.Questions_Doubts_5_Description  },
    { heading: I18N?.Questions_Doubts_6_Heading, text: I18N?.Questions_Doubts_6_Description  }
]
---
<FullScreenSectionLayout styles="">
    <div id="Questions" class="w-full max-w-[1200px] flex flex-col gap-10 py-5 px-5">
        <Heading level="h2" styles="mx-auto">
            {I18N?.Questions_Title}
        </Heading>
        <section class="grid grid-cols-1 md:grid-cols-2 p-4 gap-x-10 gap-y-5">
            <div class="flex flex-col gap-7">
                <article>
                    <Heading level="h3" styles="text-white">
                        {I18N?.Questions_Mail_Heading}
                    </Heading>
                    <form class="flex flex-col gap-3 my-4">
                        <input type="text" id="address" class="border text-sm rounded-lg block w-full p-2.5 bg-transparent border-gray-600 placeholder-gray-400 text-white focus:ring-secondary_dark focus:border-secondary_dark" placeholder="johndoe@gmail.com" required />
                        <textarea id="message" rows="4" class="block p-2.5 w-full text-sm rounded-lg border bg-transparent border-gray-600 placeholder-gray-400 text-white focus:ring-secondary_dark focus:border-secondary_dark max-h-[300px]" 
                        placeholder={I18N?.Questions_Mail_Textarea}></textarea>
                        <div class="flex justify-end">
                            <Button text={I18N?.Questions_Mail_Btn} />
                        </div>
                    </form>
                </article>
            </div>
            <div class="flex flex-col">
                <article>
                    <Heading level="h3" styles="text-white">
                        {I18N?.Questions_Calendly_Heading}
                    </Heading>
                    <div class="mt-3">
                        <Paragraph>
                            {I18N?.Questions_Calendly_Desc}
                            <a class='text-secondary' href='' onclick=`Calendly.initPopupWidget({url: 'https://calendly.com/matiasdimurodev?hide_gdpr_banner=1&primary_color=fcd705'});return false;`> link</a>
                            via Calendly.
                        </Paragraph>                        
                    </div>
                </article>
            </div>
            <div class="flex flex-col md:col-span-2">
                <article>
                    <Heading level="h3" styles="text-white">
                        {I18N?.Questions_Doubts_Title}
                    </Heading>
                    <ul class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-3">
                        { preguntasFrecuentes.map(p => <ItemFAQ heading={p.heading} text={p.text} />) }
                    </ul>
                </article>
            </div>
        </section>
    </div>
    <div class="absolute inset-0 -z-10 h-full w-full items-center px-5 py-24 [background:radial-gradient(130%_125%_at_50%_10%,#000_60%,#CFA116_100%)] rotate-180"></div>
</FullScreenSectionLayout>