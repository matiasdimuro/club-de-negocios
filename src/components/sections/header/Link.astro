<a href=`#${Astro.props.linkTo}` class="Navbar_Link
    inline-block font-light px-3 py-1
    hover:text-primary 
    active:text-primary_dark active:-translate-y-1 
    focus:text-primary_dark 
    transition-all duration-150
">
    {Astro.props.label}
</a>

<style>
    .Navbar_Link:hover {
        text-shadow: 0px 0px 21px rgba(237,185,28,0.87);
    }
</style>

<script>
    const navbar = document.getElementById("navbar")
    const navbarLinks = document.getElementsByClassName("Navbar_Link")
    const links = new Array(...navbarLinks)

    links.forEach(link => {
        link.addEventListener('click', () => {
            if (navbar?.classList.contains('navbar_open')) {
                navbar.classList.replace('navbar_open', 'hidden')
                const navbutton = document.getElementById("navbutton") as HTMLInputElement
                navbutton.checked = false
            }
        })
    })
</script>