---
const { level, styles } = Astro.props
---

{
    (level === 'h1')
        ? (
            <h1 class={`text-4xl md:text-5xl xl:text-6xl select-none ${styles}`}>
                <slot/>
            </h1>
        )
        : (level === 'h2')
            ? (
                <h2 class={`text-2xl sm:text-3xl md:text-4xl select-none ${styles}`}>
                    <slot/>
                </h2>
            )
            : (level === 'h3')
                ? (
                    <h3 class={`text-xl sm:text-2xl md:text-3xl select-none ${styles}`}>
                        <slot/>
                    </h3>
                ) 
                : (
                    <h4 class={`text-lg sm:text-xl md:text-2xl select-none ${styles}`}>
                        <slot/>
                    </h4>
                )
}